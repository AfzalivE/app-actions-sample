<shortcuts xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--    GET THING BII
        https://developers.google.com/assistant/app/reference/built-in-intents/common/get-thing

        Be sure to replace all occurrences of PUT_YOUR_APPLICATION_ID_HERE with the
        application ID you specified in app/build.gradle.
    -->

    <!--    OPEN APP FEATURE with inline inventory
        https://developers.google.com/assistant/app/reference/built-in-intents/common/open-app-feature

        Be sure to replace all occurrences of PUT_YOUR_APPLICATION_ID_HERE with the
        application ID you specified in app/build.gradle.
    -->

    <capability
        android:name="custom.actions.intent.EXAMPLE_INTENT"
        app:queryPatterns="@array/example_queries">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.example.android.architecture.blueprints.todoapp.tasks.TasksActivity"
            android:targetPackage="com.afzaln.appactions">
            <url-template
                android:value="http://custom.com{?itemName}" />
            <parameter
                android:name="itemName"
                android:key="itemName"
                android:mimeType="https://schema.org/Text" />
        </intent>
    </capability>

    <capability android:name="actions.intent.CREATE_ITEM_LIST">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.example.android.architecture.blueprints.todoapp.tasks.TasksActivity"
            android:targetPackage="com.afzaln.appactions">
            <!-- Eg. itemListName = "Grocery List" -->
            <parameter
                android:name="itemList.name"
                android:key="itemListName" />
            <!-- Eg. description = "For December" -->
            <parameter
                android:name="itemList.description"
                android:key="description" />
            <!-- Eg. itemListElementName = "Milk" -->
            <parameter
                android:name="itemList.itemListElement.name"
                android:key="itemListElementName" />
        </intent>

    </capability>

    <capability android:name="actions.intent.CREATE_THING">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.example.android.architecture.blueprints.todoapp.tasks.TasksActivity"
            android:targetPackage="com.afzaln.appactions">

            <parameter
                android:name="thing.name"
                android:key="CREATE_THING_NAME" />

            <parameter
                android:name="thing.description"
                android:key="desc" />
        </intent>
    </capability>

    <capability android:name="actions.intent.GET_THING">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.example.android.architecture.blueprints.todoapp.tasks.TasksActivity"
            android:targetPackage="com.afzaln.appactions">
            <parameter
                android:name="thing.name"
                android:key="q" />
        </intent>
    </capability>

    <shortcut
        android:enabled="true"
        android:shortcutId="active_tasks"
        android:shortcutShortLabel="@string/label_active">
        <capability-binding android:key="actions.intent.OPEN_APP_FEATURE">
            <parameter-binding
                android:key="feature"
                android:value="@array/active_tasks_synonyms" />
        </capability-binding>
    </shortcut>

    <shortcut
        android:enabled="true"
        android:shortcutId="completed_tasks"
        android:shortcutShortLabel="@string/label_completed">
        <capability-binding android:key="actions.intent.OPEN_APP_FEATURE">
            <parameter-binding
                android:key="feature"
                android:value="@array/completed_tasks_synonyms" />
        </capability-binding>
    </shortcut>

    <capability android:name="actions.intent.OPEN_APP_FEATURE">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.example.android.architecture.blueprints.todoapp.tasks.TasksActivity"
            android:targetPackage="com.afzaln.appactions">
            <parameter
                android:name="feature"
                android:key="feature" />
        </intent>
    </capability>

</shortcuts>
